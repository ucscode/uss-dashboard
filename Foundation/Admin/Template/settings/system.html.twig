<div class="{{ column_1 ?? 'col-md-7 col-lg-6' }}">
    <div class="card px-4">
        <div class='px-lg-2'>
            
            {{ form.element.openingTag|raw }}

                <div class="card-body">
                    <div class="row text-center text-sm-start align-items-center">
                        <div class="mb-2 col-sm-3 col-lg-4">
                            <img src="{{ __uss.app.option('company:logo') }}" class="mw-100" height="52px" alt="user-avatar" id="company-logo">
                        </div>
                        <div class="button-wrapper small col-sm-8">
                            <div class="mb-2">
                                {{ form.collection('avatar').field('logo').elementContext.widget.export|raw }}
                                {{ form.collection('avatar').field('logo-btn').elementContext.widget.export|raw }}
                            </div>
                            <div class="small text-muted mt-1">
                                Allowed JPG, GIF or PNG. <br> Max size of 800K
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-0">

                <div class="card-body">
                    {{ form.collection.elementContext.export|raw }}
                </div>

            {{ form.element.closingTag|raw }}

        </div>
    </div>
</div>