{% extends __dashboard.meths.theme('/base.html.twig') %}

{% block dashboard_content %}

    <div class="container-xl profile-base">
        
        {% set profileBatch = __dashboard.props.profileBatch %}
        
        {% if profileBatch and profileBatch.children is not empty %}

            <nav class="nav nav-pills profile-base-nav">

                {% for TreeNode in profileBatch.children %}

                    {% set icon = TreeNode.getAttribute('icon') %}

                    <a 
                        class="nav-link me-1 {{ TreeNode.getAttribute('active') ? 'active' : '' }}" 
                        href="{{ TreeNode.getAttribute('href') }}" 
                        target="{{ TreeNode.getAttribute('target') }}"
                    >
                        {% if icon is not empty %}
                            <i class='{{ TreeNode.getAttribute('icon') }} me-1'></i> 
                        {% endif %}
                        {{ TreeNode.getAttribute('label') }}
                    </a>

                {% endfor %}

            </nav>

        {% endif %}

        <hr class="mt-2 mb-4">

        {% block profile_content %}{% endblock %}

    </div>
    
{% endblock %}