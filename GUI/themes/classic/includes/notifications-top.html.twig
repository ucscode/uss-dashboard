{% set notifications = user.notification.get({ "hidden": 0 }, 0, 4) %}
{% set unseen = user.notification.count({ "seen": 0, "hidden": 0 }) %}

<div class="notification-box ml-15 small">
    <div class='d-sm-flex'>
    
        <button class="dropdown-toggle" id="notification" data-bs-toggle="dropdown" aria-expanded="false" type="button">
            <i class="bi bi-bell-fill"></i>
            {% if unseen > 0 %}
                <span class='animate__animated animate__wobble animate__infinite' data-nx-count>
                    {{ unseen }}
                </span>
            {% endif %}
        </button>

        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notification" id="notification-dropdown">
            
            {% if notifications|length %}

                {% for notification in notifications %}

                    <li data-id='{{ notification.id }}'>
                        <a 
                            href="{{ notification.redirect_url|default("javascript:void(0)") }}" 
                            class='{{ notification.seen is same as('0') ? "unseen" : null }}'
                            data-viewed='1'
                        >
                            <div class="image">
                                <img src="{{ 
                                    notification.avatar_url|
                                    default(user.meta.get('user.avatar') ?? default_user_avatar) 
                                }}" alt="" />
                            </div> 
                            <div class="content">
                                <p class='line-clamp clamp-3'>
                                    {{ notification.message|striptags|slice(0, 200) }}
                                </p>
                                <span>{{ __uss.meths.relativeTime(notification.period) }}</span>
                            </div>
                        </a>
                    </li>

                {% endfor %}

                <li>
                    <a href="{{ __dashboard.meths.document('notifications').url }}" class='d-block text-center'>
                        <small> <i class='bi bi-bell me-1'></i> View all </small>
                    </a>
                </li>

            {% else %}

                <li>
                    <h5 class='text-center my-2'>
                        <i class='bi bi-ban text-danger me-1'></i> No Notification
                    </h5>
                </li>

            {% endif %}

        </ul>
        
    </div>
</div>


