{% extends __uss.app.dirname(_self) ~ '/partials/layout.html.twig' %}
{% import __uss.app.dirname(_self) ~ '/partials/macros.lib.twig' as macros %}

{% block contentMain %}

    {{ form.export|raw }}

{% endblock %}

{% block contentMainAfter %}

	<hr/>
	
	{{ macros.callToAction(
		{
			question: 'Forgot Password?',
			text: 'Reset Password',
			url: __dashboard.meths.document('recovery').url,
		}
	) }}

	{{ macros.callToAction(
		{
			question: "Don't have an account?",
			text: 'Create an account',
			url: __dashboard.meths.document('register').url,
		}
	) }}

{% endblock %}