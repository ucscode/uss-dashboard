{% extends _theme ~ '/base.html.twig' %}

{% block dashboard_content %}

    <div class="container-fluid">

        <h4 class='fw-normal'>
            {% block settings_title %}
                <i class="bi bi-wrench me-1"></i> Settings
            {% endblock %}
        </h4>

        <hr>

        {% block settings_content %}

            <div class='row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4'>

                {% for item in (settingsBatch.children ?? []) %}

                    <div class="col mb-3">
                        <div class="card h-100">
                            <a class="card-body d-block" href='{{ item.getAttr('href') }}'>
                                <div class='d-flex align-items-start'>
                                    <h3 class='left my-0 me-3 p-2 border rounded text-center'>
                                        <i class="{{ item.getAttr('icon') }}"></i>
                                    </h3>
                                    <div class='right flex-grow-1'>
                                        <h4 class='fw-light mb-0 line-clamp clamp-2'>{{ item.getAttr('label') }}</h4>
                                        <p class='text-muted text-hover-warning m-0'><small>Settings</small></p>
                                    </div>
                                </div>
                            </a>
                            <div class="card-footer">
                                <a href="{{ item.getAttr('href') }}">
                                    <i class="bi bi-folder-symlink me-1"></i> Open Settings
                                </a>
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div> <!-- /rows -->

        {% endblock %} {# /settings_content #}

    </div>

{% endblock %}