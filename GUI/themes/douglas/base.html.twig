{% extends 'base.html.twig' %}

{% set themeUrl = __dashboard.meths.theme('', __uss.ENUM.URL) %}

{% block head_resource %}
    {{ parent() }}
    <!-- Custom fonts for this template-->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="{{ themeUrl }}/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="{{ themeUrl }}/css/sb-admin-2.min.css" rel="stylesheet">
{% endblock %}

{% block body_main %}

    <div id="wrapper">

        {% block dashboard_sidebar %}
            {% include __dashboard.meths.theme('/includes/sidebar.html.twig') %}
        {% endblock %}

        {% block dashboard_main %}
            
            <div id="content-wrapper" class="d-flex flex-column">

                {% block dashboard_container %}

                    <div id="content">

                        {% block dashboard_header %}
                            {% include __dashboard.meths.theme('/includes/topbar.html.twig') %}
                        {% endblock %}

                        {% block wrapper %}
                            <div class="container-fluid">
                                {% block dashboard_content %} {# content ------------------------------> important #}
                                    {{ __uss.app.renderBlocks('dashboard_content', _context)|raw }}
                                {% endblock %}
                            </div>
                        {% endblock %}

                    </div>

                {% endblock %}

                {% block footer %}
                    <footer class="sticky-footer bg-white">
                        <div class="container my-auto">
                            <div class="copyright text-center my-auto">
                                <span>Copyright &copy; {{ __uss.app.option('company:name') }} {{ "now"|date('Y') }}</span>
                            </div>
                        </div>
                    </footer>
                {% endblock %}

            </div>
            
        {% endblock %}
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="{{ themeUrl }}/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="{{ themeUrl }}/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="{{ themeUrl }}/js/sb-admin-2.min.js"></script>
{% endblock %}