{% extends '@Ud/base.html.twig' %}

{% block dashboard_content %}

    <div class="container-xl px-4 mt-4">
    
    {% set profileMenu = Ud.getDashboardProperty('profileMenu') %}
    {% if profileMenu and profileMenu.children is not empty %}
        <nav class="nav nav-pills">
            {% for node in profileMenu.children %}
                <a class="nav-link active ms-0" href="{{ node.getAttr('href') }}" target="{{ node.getAttr('target') }}">
                    {% set icon = node.getAttr('icon') %}
                    {% if icon is not empty %}
                        <i class='{{ node.getAttr('icon') }} me-1'></i> 
                    {% endif %}
                    {{ node.getAttr('label') }}
                </a>
            {% endfor %}
        </nav>
    {% endif %}

    <hr class="mt-2 mb-4">

    <form method='POST'>
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-sm-4 col-md-3 col-xl-12 text-center mb-2">
                                <figure class="mb-2">
                                    <img class="mb-2 img-fluid img-thumbnail" width="140px" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                                </figure>
                                <input type='file' name='avatar' accept=".jpg,.png,.gif,.jpeg,.webp" class='d-none'>
                                <button class="btn btn-primary" type="button">
                                    <i class="bi bi-camera me-1"></i> Change Photo
                                </button>
                            </div>
                            <div class="col-sm-8 col-md-7 col-xl-12 text-center text-sm-start text-xl-center">
                                <ul class="list-unstyled">
                                    {% if user.username %}
                                        <li>
                                            <span class="text-capitalize fs-5">{{ user.username }}</span>
                                        </li>
                                    {% endif %}
                                    <li class='text-muted mb-2'>{{ user.email }}</li>
                                    <li class='small fw-light mb-0'>Joined: {{ user.register_time|slice(0, 10) }}</li>
                                    <li class='small fw-light mb-0'>Last seen: {{ Uss.relativeTime(user.last_seen, true) }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-body p-4">
                        <form>
                            <!-- Form Group (email address)-->
                            <div class="mb-3">
                                <label class="small mb-1" for="inputEmailAddress">Email address</label>
                                <input class="form-control" id="inputEmailAddress" type="email" placeholder="Enter your email address" name="user[email]" value="{{ user.email }}">
                            </div>
                            <!-- Form Row-->
                            <div class="mb-3">
                                <label class="small mb-1" for="inputBirthday">About</label>
                                <textarea class="form-control" id="inputBirthday" name="birthday" placeholder="My Bio" rows="5" name="meta[user][about]">{{ user.getMeta("user.about")}}</textarea>
                            </div>
                            <!-- Save changes button-->
                            <button class="btn btn-primary" type="submit">Save changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>
    
{% endblock %}