{% extends _theme ~ '/base.html.twig' %}

{% set image = DashboardExtension.themeUrl('/assets/images/statistics.svg') %}

{% block dashboard_content %}

    <div class='container-fluid'>
        <div class='mb-3 border rounded-2 p-3'>
            <div class='mb-1 fs-14px'>
                {% for x in range(0, 4) %}
                    <i class='bi bi-star-fill text-warning'></i> 
                {% endfor %}
            </div>
            <p class='fw-light fs-15px'>
                Support <span class='text-primary'>{{ title }}</span> Project with BTC Donation
            </p>
            <div class='input-group'>
                <input type='text' readonly class='form-control' value='bc1qerasn0dtsf2h0sssyz5auqnj6qzugrmw0n4wm9' id='wallet'>
                <button class='btn btn-outline-success' data-ui-copy='#wallet'>
                    <i class='bi bi-copy'></i>
                </button>
            </div>
        </div>

        <div class="card card-waves mb-4">
            <div class="card-body p-5">

                <div class="row align-items-center justify-content-between">

                    <div class="col-md-7 mb-5">
                        <h2 class="text-primary">Welcome Admin!</h2>
                        <h4 class='text-muted'>Your dashboard is ready!</h4>
                        <hr>
                        <p class="text-gray-700">Your dashboard adventure begins here. <br>
                        Unlock the power of control with our feature-packed arsenal. <br>
                        Customize roles, change themes, install plugins, and command your domain effortlessly</p>
                        <div class='mb-3'></div>
                        <a class="btn btn-secondary btn-sm m-1" href="{{ github_repository }}">
                            <i class='bi bi-github me-1'></i> Source Code
                        </a>
                        <a class="btn btn-outline-primary btn-sm m-1" href="{{ official_website }}">
                            <i class='bi bi-globe me-1'></i> Offical Website
                        </a>
                    </div>

                    <div class="col-md-5 mt-xxl-n4"><img class="img-fluid px-xl-4 mt-xxl-n5" src="{{ image }}"></div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}