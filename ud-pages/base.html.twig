{# The base template for Uss Dashboard #}
{% extends '@Uss/base.html.twig' %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ Uss.call('generateUrl', constant('Udash::ASSETS_DIR') ~ '/css/default.css') }}">
{% endblock head_css %}

{% block body_js %}
    <script src="{{ Uss.call('generateUrl', constant('Udash::ASSETS_DIR') ~ '/js/polyfill.js') }}"></script>
    {{ parent() }}
    {% if user is not empty %}
	    <script src="{{ Uss.call('generateUrl', constant('Udash::ASSETS_DIR') ~ '/js/dashboard.js') }}"></script>
    {% endif %}
    
    <script data-alerts>$(function() { {{ Uss.renderBlocks('__alert')|raw }} });</script>
{% endblock %}